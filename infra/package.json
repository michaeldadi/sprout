{
  "name": "infra",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "watch": "tsc --watch",
    "deploy": "bash deploy-prod.sh",
    "deploy:staging": "bash deploy-staging.sh",
    "destroy": "cdk destroy",
    "build:esbuild": "esbuild --bundle --platform=node --target=node14 --outfile=dist/index.js src/index.ts",
    "watch:esbuild": "esbuild --bundle --platform=node --target=node14 --outfile=dist/index.js src/index.ts --watch",
    "deploy:esbuild": "cdk deploy --app \"node dist/index.js\"",
    "destroy:esbuild": "cdk destroy --app \"node dist/index.js\"",
    "migrate:dev": "npx ts-node scripts/run-migration.ts --env dev",
    "migrate:prod": "npx ts-node scripts/run-migration.ts --env prod",
    "db-endpoint:dev": "npx ts-node scripts/get-db-endpoint.ts --env dev",
    "db-endpoint:prod": "npx ts-node scripts/get-db-endpoint.ts --env prod"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/source-map-support": "^0",
    "aws-cdk-lib": "^2.211.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.651.1",
    "@aws-sdk/client-secrets-manager": "^3.651.1",
    "esbuild": "^0.25.9",
    "pg": "^8.12.0"
  }
}
